@model Programer.Core.ViewModels.Articles.ArticleCreateOrEditVm
@{
    ViewData["Title"] = $"Group {@Model.Name}";
}
<!DOCTYPE html>


<meta name="viewport" content="width=device-width" />
<title>@ViewData["Title"]</title>


<div>
    <h4>@ViewData["Title"]</h4>
    <hr />
    <dl class="row">
        <dt class=" col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class=" col-sm-2">
            @Html.DisplayNameFor(model => model.Writer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Writer)
        </dd>
        <dt class=" col-sm-2">
            @Html.DisplayNameFor(model => model.ShortDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShortDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" type="button" class="btn btn-success">Edit</a> |
    <a asp-action="Index" type="button" class="btn btn-success">Back</a>
</div>

