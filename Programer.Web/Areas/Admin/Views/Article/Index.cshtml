@model IEnumerable<Programer.Core.ViewModels.Articles.ArticleIndexVm>

@{
    ViewData["Title"] = "Article";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title> @ViewData["Title"]</title>
</head>
<body>


    <div class="card mb-4">
        <div class="card-header">

            <a asp-action="Create" type="button" class="btn btn-success">Add @ViewData["Title"]</a>
        </div>
        <div class="card-body">
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Writer)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ArticleGroup)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CreateDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LastModifyDate)
                        </th>


                    </tr>
                </thead>
                <thead>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th>
                                @item.Id
                            </th>
                            <th>
                                @item.Name
                            </th>
                            <th>
                                @item.Writer
                            </th>
                            <th>
                                @item.ArticleGroup
                            </th>
                            <th>
                                @item.CreateDate.toshamsi()
                            </th>
                            <th>
                                @if (item.LastModifyDate.HasValue)
                                {
                                    @item.LastModifyDate.Value.toshamsi()
                                }
                            </th>

                            <th>
                                <div class="btn-group" role="group" aria-label="Basic mixed styles example">

                                    <a asp-action="Delete" asp-route-id="@item.Id" type="button" class="btn btn-danger">Delete</a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" type="button" class="btn btn-warning">Edit</a>
                                    <a asp-action="Details" asp-route-id="@item.Id" type="button" class="btn btn-success">Details</a>

                                </div>
                            </th>
                        </tr>
                    }
                </thead>



            </table>
        </div>
    </div>


</body>

</html>
